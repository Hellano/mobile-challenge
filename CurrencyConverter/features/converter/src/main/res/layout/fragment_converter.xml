<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".ui.converter.ConverterFragment">

        <LinearLayout
            android:id="@+id/fromContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_currency_selector"
            android:padding="5dp"
            android:orientation="vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/swapButton"
            app:layout_constraintEnd_toStartOf="@id/swapButton"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/fromCurrencyId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USD"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="USD" />

            <TextView
                android:id="@+id/fromCurrencyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="United States of Dollar"
                android:textSize="20sp"
                tools:text="United States of Dollar" />
        </LinearLayout>

        <EditText
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/swapButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/swapButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/swapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/btn_swap_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <LinearLayout
            android:id="@+id/toContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/btn_currency_selector"
            android:orientation="vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/swapButton"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/swapButton"
            app:layout_constraintVertical_bias="0.08">

            <TextView
                android:id="@+id/toCurrencyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRL"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="BRL" />

            <TextView
                android:id="@+id/toCurrencyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brazilian Real"
                android:textSize="20sp"
                tools:text="Brazilian Real" />
        </LinearLayout>

        <TextView
            android:id="@+id/convertedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,00"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/swapButton"
            app:layout_constraintTop_toBottomOf="@id/swapButton"
            app:layout_constraintVertical_bias="0.13" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>